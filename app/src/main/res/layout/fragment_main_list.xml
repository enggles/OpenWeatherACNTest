<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.accenture.openweatheracntest.view.fragment.MainListFragment">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/fragment_main_list_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <com.rilixtech.materialfancybutton.MaterialFancyButton
        android:id="@+id/fragment_main_list_refresh"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="@string/refresh_action"
        android:layout_margin="12dp"
        android:layout_gravity="bottom"
        app:mfb_radius="18dp"
        app:mfb_defaultColor="@color/colorPrimary" />

</FrameLayout>
